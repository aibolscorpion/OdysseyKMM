<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/leftIconBg"
        android:width="28dp"
        android:height="32dp"
        android:right="28dp">
        <shape android:shape="rectangle" >
            <corners android:topLeftRadius="16dp"
                android:bottomLeftRadius="16dp" />
        </shape>
    </item>

    <item android:id="@+id/rightIconBg"
        android:width="28dp"
        android:height="32dp"
        android:left="28dp">
        <shape android:shape="rectangle" >
            <corners android:topRightRadius="16dp"
                android:bottomRightRadius="16dp" />
        </shape>
    </item>

    <item android:id="@+id/leftIcon"
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/icons_tabs_train"
        android:gravity="center_vertical"
        android:left="2dp"/>

    <item
        android:id="@+id/rightIcon"
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/icons_tabs_train"
        android:gravity="center_vertical"
        android:left="30dp"/>

</layer-list>