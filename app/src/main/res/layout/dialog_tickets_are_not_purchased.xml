<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="listener"
            type="kz.divtech.odyssey.rotation.ui.login.listener.OnCloseListener" />
        <variable
            name="trip"
            type="kz.divtech.odyssey.rotation.domain.model.trips.Trip" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin"
                android:paddingBottom="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_root_ui_bold"
                    android:textSize="22sp"
                    android:textColor="#1b344f"
                    app:direction="@{trip.direction}"
                    app:date="@{trip.date}"
                    tools:text="Домой,  27 сен"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="14sp"
                    android:textColor="#748595"
                    android:lineSpacingExtra="2sp"
                    android:text="@{@string/to_end_station(trip.end_station)}"
                    tools:text="В Алматы"
                    android:layout_marginTop="4dp"/>


                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_ticket_is_not_purchased"
                    app:trip="@{trip}"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            style="@style/bottomSheetBtn"
            android:text="@string/close"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:onClick="@{() -> listener.close()}"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>