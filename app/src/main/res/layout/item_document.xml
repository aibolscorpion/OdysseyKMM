<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="document"
            type="kz.divtech.odyssey.rotation.domain.model.profile.documents.Document" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="@dimen/margin" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/workPermissionCL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordPermissionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_permission"
                    style="@style/mainTitle2TextStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons_tabs_right_blue"
                    android:layout_gravity="end|center_vertical"
                    app:layout_constraintTop_toTopOf="@+id/wordPermissionTV"
                    app:layout_constraintBottom_toBottomOf="@+id/wordPermissionTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/go" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/workPermissionNumberTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no."
                    style="@style/keyTextStyle"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintTop_toBottomOf="@+id/workPermissionCL"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/workPermissionNumberValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_root_ui_bold"
                    android:textSize="14sp"
                    android:textColor="#15304d"
                    android:lineSpacingExtra="8sp"
                    android:text="@{document.number}"
                    tools:text="@string/document_number_placeholder"
                    app:layout_constraintTop_toBottomOf="@id/workPermissionNumberTV"
                    app:layout_constraintStart_toStartOf="@id/workPermissionNumberTV"/>

                <TextView
                    android:id="@+id/expireDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/keyTextStyle"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintTop_toBottomOf="@+id/workPermissionCL"
                    app:layout_constraintStart_toEndOf="@+id/workPermissionNumberValueTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    android:text="@string/expire_date_until"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profileMenuTextStyle"
                    android:text="@string/expire_date_placeholder"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/expireDateTV"
                    app:layout_constraintStart_toStartOf="@id/expireDateTV"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>