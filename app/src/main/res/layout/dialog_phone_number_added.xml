<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="phoneNumberAddedDialog"
            type="kz.divtech.odyssey.rotation.ui.login.auth.find_by_phone_number.dialogs.PhoneNumberAddedDialog" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin"
                android:paddingTop="@dimen/two_times_margin">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_added"
                style="@style/bottomSheetTitle" />

            <TextView
                android:id="@+id/contentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_added_content"
                android:layout_marginTop="@dimen/margin"
                style="@style/bottomSheetContent"
                android:layout_marginBottom="@dimen/margin" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            style="@style/bottomSheetBtn"
            android:text="@android:string/ok"
            android:onClick="@{() -> phoneNumberAddedDialog.dismiss()}"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/margin"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>