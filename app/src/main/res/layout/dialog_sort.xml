<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="thisDialog"
            type="kz.divtech.odyssey.rotation.ui.trips.active_archive_trips.dialogs.SortTripDialog" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/sortTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:fontFamily="@font/pt_root_ui_bold"
            android:textSize="19sp"
            android:textColor="#07213d"
            android:lineSpacingExtra="5sp"
            app:layout_constraintTop_toTopOf="@+id/closeBtn"
            app:layout_constraintBottom_toBottomOf="@+id/closeBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_filled_circle"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:onClick="@{() -> thisDialog.dismiss()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sortTV"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin">

                <RadioButton
                    android:id="@+id/departureDateRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/byDepartureDateTV"
                    app:layout_constraintBottom_toBottomOf="@+id/firstComingTV"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/byDepartureDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_departure_date"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="16sp"
                    android:textColor="#07213d"
                    android:lineSpacingExtra="2sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/departureDateRB" />

                <TextView
                    android:id="@+id/firstComingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_coming"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="13sp"
                    android:textColor="#808e9e"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="5sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/byDepartureDateTV"
                    app:layout_constraintStart_toEndOf="@+id/departureDateRB" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin">

                <RadioButton
                    android:id="@+id/statusRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/byStatusTV"
                    app:layout_constraintBottom_toBottomOf="@+id/firstPurchasedTV"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/byStatusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_status"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="16sp"
                    android:textColor="#07213d"
                    android:lineSpacingExtra="2sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/statusRB" />

                <TextView
                    android:id="@+id/firstPurchasedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_purchased"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="13sp"
                    android:textColor="#808e9e"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="5sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/byStatusTV"
                    app:layout_constraintStart_toEndOf="@+id/statusRB" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>