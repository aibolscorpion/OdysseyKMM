<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="ticket"
            type="kz.divtech.odyssey.rotation.domain.model.trips.Ticket" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/fileIV"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_notify_another_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:textSize="16sp"
            android:textColor="#07213d"
            android:lineSpacingExtra="8sp"
            android:layout_marginStart="12dp"
            tools:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintStart_toEndOf="@+id/fileIV"
            tools:text="Семей – Актогай"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:textSize="13sp"
            android:textColor="#98a5b1"
            android:lineSpacingExtra="5sp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/fileIV"
            tools:layout_constraintStart_toEndOf="@+id/fileIV"
            tools:text="PDF • 1 фев 2023 • 92.5 КБ" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>