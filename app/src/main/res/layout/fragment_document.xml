<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="documentsFragment"
            type="kz.divtech.odyssey.rotation.ui.profile.documents.DocumentsFragment" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin"
        android:paddingTop="25dp">
        <TextView
            android:id="@+id/documentsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/documents"
            style="@style/mainTitleTextStyle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:onClick="@{() -> documentsFragment.showWorkPermissionDialog()}"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="@dimen/margin"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/workPermissionCL"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordPermissionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_permission"
                        style="@style/mainTitle2TextStyle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons_tabs_right_blue"
                        android:layout_gravity="end|center_vertical"
                        app:layout_constraintTop_toTopOf="@+id/wordPermissionTV"
                        app:layout_constraintBottom_toBottomOf="@+id/wordPermissionTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@string/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bottom_sheet_line"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/workPermissionLLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/workPermissionCL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin">
                    <TextView
                        android:id="@+id/workPermissionNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no."
                        style="@style/keyTextStyle"
                        />

                    <TextView
                        android:id="@+id/workPermissionNumberValueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pt_root_ui_bold"
                        android:textSize="14sp"
                        android:textColor="#15304d"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/work_permission_number_placeholder" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/workPermissionCL"
                    app:layout_constraintStart_toEndOf="@+id/workPermissionLLC"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4">
                <TextView
                    android:id="@+id/expireDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/keyTextStyle"
                    android:text="@string/expire_date_until"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profileMenuTextStyle"
                    android:text="@string/expire_date_placeholder"
                    android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:onClick="@{() -> documentsFragment.showIdDialog()}"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="@dimen/margin"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/idCL"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/idTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id"
                        style="@style/mainTitle2TextStyle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons_tabs_right_blue"
                        android:layout_gravity="end|center_vertical"
                        app:layout_constraintTop_toTopOf="@+id/idTV"
                        app:layout_constraintBottom_toBottomOf="@+id/idTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@string/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bottom_sheet_line"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/idLLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/idCL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin">
                    <TextView
                        android:id="@+id/idNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no."
                        style="@style/keyTextStyle"
                        />

                    <TextView
                        android:id="@+id/idNumberValueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pt_root_ui_bold"
                        android:textSize="14sp"
                        android:textColor="#15304d"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/iin_value" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/idCL"
                    app:layout_constraintStart_toEndOf="@+id/idLLC"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4">
                    <TextView
                        android:id="@+id/idIssueExpireDateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/keyTextStyle"
                        android:text="@string/id_issue_expire_date"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/profileMenuTextStyle"
                        android:text="@string/id_issue_expire_date_placeholder"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:onClick="@{() -> documentsFragment.showPassportDialog()}"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="@dimen/margin"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passportCL"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/passportTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/passport"
                        style="@style/mainTitle2TextStyle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons_tabs_right_blue"
                        android:layout_gravity="end|center_vertical"
                        app:layout_constraintTop_toTopOf="@+id/passportTV"
                        app:layout_constraintBottom_toBottomOf="@+id/passportTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@string/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bottom_sheet_line"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/descriptionTextStyle"
                    android:textColor="@color/profile_description"
                    android:gravity="start"
                    app:layout_constraintTop_toBottomOf="@id/passportCL"
                    android:text="@string/you_have_not_filled_passport_data"
                    android:layout_marginTop="13dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:onClick="@{() -> documentsFragment.showRecidencyPermitDialog()}"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="@dimen/margin"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/residencePermitCL"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/residencePermitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/residency_permit"
                        style="@style/mainTitle2TextStyle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons_tabs_right_blue"
                        android:layout_gravity="end|center_vertical"
                        app:layout_constraintTop_toTopOf="@+id/residencePermitTV"
                        app:layout_constraintBottom_toBottomOf="@+id/residencePermitTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@string/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bottom_sheet_line"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/descriptionTextStyle"
                    android:textColor="@color/profile_description"
                    android:gravity="start"
                    app:layout_constraintTop_toBottomOf="@id/residencePermitCL"
                    android:text="@string/you_have_not_filled_residency_permit_data"
                    android:layout_marginTop="13dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>