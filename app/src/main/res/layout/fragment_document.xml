<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin"
        android:paddingTop="25dp">
        <TextView
            android:id="@+id/documentsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/documents"
            style="@style/mainTitleTextStyle"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:cardCornerRadius="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="22dp"
                android:paddingBottom="@dimen/margin"
                >

                <TextView
                    android:id="@+id/wordPermissionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_permission"
                    style="@style/mainTitle2TextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/wordPermissionTV"
                    app:layout_constraintTop_toTopOf="@+id/wordPermissionTV" />

                <View
                    android:id="@+id/lineVw"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    app:layout_constraintTop_toBottomOf="@+id/wordPermissionTV"
                    android:layout_marginTop="@dimen/margin"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/workPermissionLLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lineVw"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin">
                    <TextView
                        android:id="@+id/workPermissionNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no."
                        style="@style/keyTextStyle"
                        />

                    <TextView
                        android:id="@+id/workPermissionNumberValueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pt_root_ui_bold"
                        android:textSize="14sp"
                        android:textColor="#15304d"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/work_permission_number_placeholder" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lineVw"
                    app:layout_constraintStart_toEndOf="@+id/workPermissionLLC"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4">
                <TextView
                    android:id="@+id/expireDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/keyTextStyle"
                    android:text="@string/expire_date_until"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profileMenuTextStyle"
                    android:text="@string/expire_date_placeholder"
                    android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:cardCornerRadius="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="22dp"
                android:paddingBottom="@dimen/margin"
                >

                <TextView
                    android:id="@+id/idTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    style="@style/mainTitle2TextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/idTV"
                    app:layout_constraintTop_toTopOf="@+id/idTV" />

                <View
                    android:id="@+id/line2Vw"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    app:layout_constraintTop_toBottomOf="@+id/idTV"
                    android:layout_marginTop="@dimen/margin"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/idLLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/line2Vw"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin">
                    <TextView
                        android:id="@+id/idNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no."
                        style="@style/keyTextStyle"
                        />

                    <TextView
                        android:id="@+id/idNumberValueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pt_root_ui_bold"
                        android:textSize="14sp"
                        android:textColor="#15304d"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/id_placeholder" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/line2Vw"
                    app:layout_constraintStart_toEndOf="@+id/idLLC"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4">
                    <TextView
                        android:id="@+id/idIssueExpireDateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/keyTextStyle"
                        android:text="@string/id_issue_expire_date"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/profileMenuTextStyle"
                        android:text="@string/id_issue_expire_date_placeholder"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:cardCornerRadius="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="22dp"
                android:paddingBottom="@dimen/margin"
                >

                <TextView
                    android:id="@+id/passportTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passport"
                    style="@style/mainTitle2TextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/passportTV"
                    app:layout_constraintTop_toTopOf="@+id/passportTV" />

                <View
                    android:id="@+id/line3Vw"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    app:layout_constraintTop_toBottomOf="@+id/passportTV"
                    android:layout_marginTop="@dimen/margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:cardCornerRadius="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="22dp"
                android:paddingBottom="@dimen/margin"
                >

                <TextView
                    android:id="@+id/residentCardTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resident_card"
                    style="@style/mainTitle2TextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/residentCardTV"
                    app:layout_constraintTop_toTopOf="@+id/residentCardTV" />

                <View
                    android:id="@+id/line4Vw"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    app:layout_constraintTop_toBottomOf="@+id/residentCardTV"
                    android:layout_marginTop="@dimen/margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>