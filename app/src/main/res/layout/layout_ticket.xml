<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="trip"
            type="kz.divtech.odyssey.rotation.ui.trips.models.Trip" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottom_sheet_line"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/directionLL"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="@+id/ticketInfoLL"
                app:layout_constraintBottom_toBottomOf="@id/ticketInfoLL"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/departureIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons_tabs_grey_train"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/departure" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="#4D2D4461"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/departureIV"
                    app:layout_constraintBottom_toTopOf="@+id/destinationIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:id="@+id/destinationIV"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_point_rotation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.8"
                    android:contentDescription="@string/destination" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/ticketInfoLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin"
                app:layout_constraintStart_toEndOf="@+id/directionLL">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@mipmap/new_avia_logo_bundle"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_bold"
                            android:textSize="16sp"
                            android:textColor="#1b344f"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="16 авг, вт"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_bold"
                            android:textSize="20sp"
                            android:textColor="#1b344f"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-4sp"
                            android:text="10:40"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="Алматы-2, Алматы"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    android:layout_marginTop="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="перевозчик"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="поезд"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="вагон"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="место"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#1b344f"
                            android:lineSpacingExtra="2sp"
                            android:text="КТЖ"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#1b344f"
                            android:lineSpacingExtra="2sp"
                            android:text="№31Т (Шымкент - Семей)"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#4C1b344f"
                            android:lineSpacingExtra="2sp"
                            android:text="билеты не куплены"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#4C1b344f"
                            android:lineSpacingExtra="2sp"
                            android:text="билеты не куплены"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_line"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@mipmap/new_avia_logo_bundle"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_bold"
                            android:textSize="16sp"
                            android:textColor="#1b344f"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="16 авг, вт"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_bold"
                            android:textSize="20sp"
                            android:textColor="#1b344f"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-4sp"
                            android:text="20:45"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pt_root_ui_medium"
                            android:textSize="14sp"
                            android:textColor="#748595"
                            android:lineSpacingExtra="2sp"
                            android:text="Актогай, Актогай"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottom_sheet_line"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintTop_toBottomOf="@+id/ticketInfoLL"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>