<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listener"
            type="kz.divtech.odyssey.rotation.ui.login.listener.OnCloseListener" />
    </data>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin"
            android:paddingEnd="@dimen/margin"
            android:paddingTop="@dimen/two_times_margin"
            android:paddingBottom="@dimen/two_times_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_permission"
                style="@style/mainTitleTextStyle"
                />

            <TextView
                style="@style/keyTextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/status" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/active"
                android:backgroundTint="@color/bottom_sheet_line"
                style="@style/profileMenuTextStyle"
                />


            <TextView
                style="@style/keyTextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/permission_no." />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/permission_number_placeholder"
                android:backgroundTint="@color/bottom_sheet_line"
                style="@style/profileMenuTextStyle"
                />

            <TextView
                style="@style/keyTextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/issue_date" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/issue_date_placeholder"
                android:backgroundTint="@color/bottom_sheet_line"
                style="@style/profileMenuTextStyle"
                />

            <TextView
                style="@style/keyTextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/expire_date" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/issue_date_placeholder"
                android:backgroundTint="@color/bottom_sheet_line"
                style="@style/profileMenuTextStyle"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/icons_tabs_close"
            android:layout_gravity="top|end"
            android:onClick="@{() -> listener.close() }"
            />
    </FrameLayout>

</layout>