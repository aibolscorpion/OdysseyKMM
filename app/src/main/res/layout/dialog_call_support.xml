<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="thisDialog"
            type="kz.divtech.odyssey.rotation.ui.help.contact_support.CallSupportDialog" />

        <variable
            name="contactSupport"
            type="kz.divtech.odyssey.rotation.ui.help.contact_support.ContactSupport" />

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin"
                android:paddingTop="28dp"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/call_support_content"
                style="@style/bottomSheetContent"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/bottom_sheet_line"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/call_support"
                style="@style/bottomSheetBtn"
                android:onClick="@{()-> contactSupport.callSupport(thisDialog)}" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            style="@style/bottomSheetBtn"
            android:text="@string/cancel"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:onClick="@{()-> thisDialog.dismiss()}"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>