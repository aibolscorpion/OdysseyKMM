<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="documentDialog"
            type="kz.divtech.odyssey.rotation.ui.profile.documents.document.DocumentDialog" />
        <variable
            name="employee"
            type="kz.divtech.odyssey.rotation.domain.model.login.login.Employee" />
        <variable
            name="document"
            type="kz.divtech.odyssey.rotation.domain.model.profile.documents.Document" />
        <variable
            name="viewModel"
            type="kz.divtech.odyssey.rotation.ui.profile.documents.document.DocumentViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin"
                android:paddingEnd="@dimen/margin"
                android:paddingTop="@dimen/two_times_margin"
                android:paddingBottom="@dimen/two_times_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passport"
                    style="@style/mainTitleTextStyle"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@font/pt_root_ui_medium"
                    android:textSize="15sp"
                    android:textColor="@color/bottom_sheet_content"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="7sp"
                    android:layout_marginTop="13dp"
                    android:text="@string/be_careful_when_filling_data"/>

                <TextView
                    style="@style/keyTextStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/name_latin" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@{employee.firstNameEn}"
                    android:backgroundTint="@color/bottom_sheet_line"
                    style="@style/uneditable_text"
                    tools:text="@string/name_en_placeholder" />

                <TextView
                    style="@style/keyTextStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/surname_latin" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{employee.lastNameEn}"
                    android:backgroundTint="@color/bottom_sheet_line"
                    style="@style/uneditable_text"
                    tools:text="@string/surname_en_placeholder" />

                <TextView
                    style="@style/keyTextStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/date_of_birth" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:birthDate="@{employee.birthDate}"
                    android:backgroundTint="@color/bottom_sheet_line"
                    style="@style/uneditable_text"
                    tools:text="@string/date_of_birth_placeholder" />

                <TextView
                    style="@style/keyTextStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/citizenship"
                    android:layout_marginTop="20dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/bottom_sheet_line"
                    android:text="@{employee.countryName}"
                    style="@style/uneditable_text"
                    tools:text="@string/kazakhstan"/>

                <include
                    layout="@layout/layout_document"
                    app:document="@{document}" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="bottom"
                    android:text="@string/save"
                    android:layout_marginTop="@dimen/margin"
                    android:onClick="@{() -> viewModel.updateDocument(document)}" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/icons_tabs_close"
                android:layout_gravity="top|end"
                android:onClick="@{() -> documentDialog.close() }" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{viewModel.PBarVisibility}" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>