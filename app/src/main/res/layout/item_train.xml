<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="train"
            type="kz.divtech.odyssey.shared.domain.model.trips.response.trip.Train"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:textSize="14sp"
            android:textColor="#808e9e"
            android:lineSpacingExtra="4sp"
            android:text="@{@string/dash_sign_btw_two_text(train.depStationName, train.arrStationName)}"
            tools:text="Алматы 2 – Караганды"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="#808e9e"
            android:lineSpacingExtra="4sp"
            app:ticketDepDateTime="@{train.depDateTime}"
            app:ticketArrDateTime="@{train.arrDateTime}"
            tools:text="8 фев, 16:40 – 8 фев, 23:20"/>

    </LinearLayout>

</layout>