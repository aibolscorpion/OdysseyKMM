<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="thisFragment"
            type="kz.divtech.odyssey.rotation.ui.login.language.ChooseLanguageFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_screen"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin"
        android:paddingBottom="24dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/changeLanguageTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_language"
            android:fontFamily="@font/pt_root_ui_bold"
            android:textSize="24sp"
            android:textColor="#fefffe"
            android:letterSpacing="-0.02"
            android:gravity="center_horizontal"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_medium"
            android:textSize="14sp"
            android:textColor="#cfd5dc"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text="@string/choose_language_desc"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/changeLanguageTitleTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/russianBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/russian"
            style="@style/buttonStyle"
            android:background="@drawable/bg_contact_support_button"
            android:layout_marginBottom="10dp"
            android:onClick="@{(view) -> thisFragment.chooseLanguage(view)}"
            app:layout_constraintBottom_toTopOf="@+id/kazakhBtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kazakhBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kazakh"
            style="@style/buttonStyle"
            android:background="@drawable/bg_contact_support_button"
            android:layout_marginBottom="10dp"
            android:onClick="@{(view) -> thisFragment.chooseLanguage(view)}"
            app:layout_constraintBottom_toTopOf="@+id/englishBtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/englishBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english"
            style="@style/buttonStyle"
            android:background="@drawable/bg_contact_support_button"
            android:onClick="@{(view) -> thisFragment.chooseLanguage(view)}"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>