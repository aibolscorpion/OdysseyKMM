<resources>

    <style name="loginTitleTextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="nameTextStyle">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
    </style>

    <style name="descriptionTextStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="digitsEditTextStyle">
        <item name="android:layout_width">@dimen/code_edit_text_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/code_edit_text_hint</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/zero</item>
        <item name="android:background">@drawable/bg_edit_text_layout</item>
    </style>

    <style name="buttonStyle" >
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="bottomSheetTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bottom_sheet_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
    </style>

    <style name="bottomSheetContent">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bottom_sheet_content</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="bottomSheetBtn">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/bottom_sheet_btn</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_bottom_sheet_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="contactSupportTitle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/contact_support_title</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>


    <style name="contactSupportContent">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bottom_sheet_content</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="profileNameTextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/terms_of_agreement_title</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="uneditable_text">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="profileMenuTextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/profile_menu_text</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="mainTitleTextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/profile_menu_text</item>
    </style>

    <style name="mainTitle2TextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#0c2b4c</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">-3sp</item>
    </style>

    <style name="keyTextStyle">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#748595</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="keyTextStyle2">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#748595</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="tab_text">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="selected_question_title">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/terms_of_agreement_title</item>
    </style>

    <style name="unselected_question_title">
        <item name="android:fontFamily">@font/pt_root_ui_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">#15304d</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:fontFamily">@font/pt_root_ui_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TermsOfAgreementBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_terms_of_agreement_dialog</item>
    </style>

    <style name="TermsOfAgreementBottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/TermsOfAgreementBottomSheet</item>
        <item name="colorAccent">@color/bottom_sheet_btn</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>

    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bottom_sheet_btn</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bottom_sheet_btn</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>




</resources>